{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "es2021",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "composite": false,
    "incremental": true,
    "rootDir": "${configDir}",
    "declaration": false,
    "declarationMap": false,
    "allowJs": true,
    "types": ["vitest/globals"],
    "plugins": [
      {
        "name": "next",
      },
    ],
  },
  "include": [
    "next-env.d.ts",
    "vitest-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.vtest.ts",
    "**/*.vtest.tsx",
    ".next/types/**/*.ts",
    "src/utils/documentAnalysis.mts",
  ],
  "exclude": ["node_modules", "mcp-server", "claude", "scripts", "src/scripts", "**/*.vtest.ts", "**/*.vtest.tsx"],
}
