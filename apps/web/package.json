{
  "name": "@roast/web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "pnpm --filter @roast/ai run check-schemas && pnpm --filter @roast/ai run check-readmes && next build",
    "start": "next start",
    "lint": "eslint . --config ./config/eslint/.eslintrc.json",
    "typecheck": "tsc --noEmit",
    "check": "pnpm run typecheck && pnpm run lint",
    "test": "jest --config ./config/jest/jest.config.cjs --maxWorkers=50%",
    "test:unit": "jest --config ./config/jest/jest.config.cjs --testPathIgnorePatterns='\\.(integration|e2e|llm)\\.test\\.|playwright' --maxWorkers=50%",
    "test:integration": "jest --config ./config/jest/jest.config.cjs --testMatch='**/*.integration.test.ts' --maxWorkers=50%",
    "test:e2e": "jest --config ./config/jest/jest.config.cjs --testMatch='**/*.e2e.test.ts' --maxWorkers=50%",
    "test:llm": "jest --config ./config/jest/jest.config.cjs --testMatch='**/*.llm.test.ts' --maxWorkers=50%",
    "test:fast": "jest --config ./config/jest/jest.config.cjs --testPathIgnorePatterns='\\.(e2e|llm)\\.test\\.|playwright' --maxWorkers=50%",
    "test:without-llms": "jest --config ./config/jest/jest.config.cjs --testPathIgnorePatterns='\\.llm\\.test\\.|playwright' --maxWorkers=50%",
    "test:without-external": "jest --config ./config/jest/jest.config.cjs --testPathIgnorePatterns='\\.(e2e|llm)\\.test\\.|playwright' --maxWorkers=50%",
    "test:ci": "jest --config ./config/jest/jest.config.cjs --testPathIgnorePatterns='\\.(integration|e2e|llm)\\.test\\.|playwright' --maxWorkers=3",
    "test:ci-integration": "jest --config ./config/jest/jest.config.cjs --testMatch='**/*.integration.test.ts' --testPathIgnorePatterns='(articleImport|comprehensiveAnalysis|markdownPrepend)\\.integration\\.test' --maxWorkers=2",
    "test:ci-nocov": "jest --config ./config/jest/jest.config.cjs --testPathIgnorePatterns='\\.(integration|e2e|llm)\\.test\\.|playwright' --maxWorkers=3 --coverage=false",
    "test:shard": "jest --config ./config/jest/jest.config.cjs --testPathIgnorePatterns='\\.(integration|e2e|llm)\\.test\\.|playwright' --maxWorkers=2",
    "test:debug": "TEST_DEBUG=true jest --config ./config/jest/jest.config.cjs",
    "typecheck:scripts": "tsc --project ./config/typescript/tsconfig.scripts.json",
    "test:scripts": "pnpm run typecheck:scripts && pnpm run test:scripts:smoke",
    "test:scripts:smoke": "echo 'Running script smoke tests...' && pnpm run test:scripts:runtime",
    "test:scripts:runtime": "echo 'Testing script runtime...' && timeout 5 pnpm run process-jobs:dry-run || echo 'Dry run completed'",
    "process-jobs": "pnpm --filter @roast/jobs run process-job",
    "process-jobs:dry-run": "dotenv -e .env.local -- tsx -e \"console.log('âœ… Script dependencies load correctly'); process.exit(0)\"",
    "process-jobs-adaptive": "pnpm --filter @roast/jobs run process-adaptive",
    "cleanup-stale-jobs": "dotenv -e .env.local -- tsx src/scripts/cleanup-stale-jobs.ts",
    "test-helicone-sessions": "dotenv -e .env.local -- tsx src/scripts/test-helicone-sessions.ts",
    "helicone-cost-report": "dotenv -e .env.local -- tsx src/scripts/helicone-cost-report.ts",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:debug": "playwright test --debug"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.54.0",
    "@auth/prisma-adapter": "^2.10.0",
    "@heroicons/react": "^2.2.0",
    "@leeoniya/ufuzzy": "^1.0.18",
    "@prisma/client": "^6.13.0",
    "@roast/ai": "workspace:*",
    "@roast/db": "workspace:*",
    "@roast/domain": "workspace:*",
    "@roast/jobs": "workspace:*",
    "@tailwindcss/forms": "^0.5.10",
    "axios": "^1.10.0",
    "chroma-js": "^3.1.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "diff-match-patch": "^1.0.5",
    "dotenv": "^16.5.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^24.0.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.488.0",
    "markdown-truncate": "^1.1.1",
    "mathjs": "^14.6.0",
    "nanoid": "^5.1.5",
    "next": "15.3.2",
    "next-auth": "5.0.0-beta.28",
    "next-safe-action": "^7.10.8",
    "openai": "^4.93.0",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.56.4",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-slate-transformer": "^0.9.0",
    "server-only": "^0.0.1",
    "slate": "^0.112.0",
    "slate-history": "^0.110.3",
    "slate-react": "^0.112.1",
    "tailwind-merge": "^3.3.1",
    "turndown": "^7.1.2",
    "unified": "^11.0.5",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@playwright/test": "^1.51.1",
    "@prisma/nextjs-monorepo-workaround-plugin": "^6.13.0",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/chroma-js": "^3.1.1",
    "@types/diff-match-patch": "^1.0.36",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/jsdom": "^21.1.7",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20",
    "@types/react": "19.1.0",
    "@types/react-dom": "^19",
    "@types/turndown": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "copy-webpack-plugin": "^13.0.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.3.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "prisma": "^6.13.0",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.3.2",
    "tsx": "^4.7.1",
    "typescript": "^5"
  }
}