{
  "name": "roast-my-post",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @roast/web dev",
    "build": "turbo run build",
    "start": "pnpm --filter @roast/web start",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:llm": "turbo run test:llm",
    "test:fast": "pnpm run test:unit && pnpm run test:integration",
    "test:without-llms": "turbo run test:without-llms",
    "test:without-external": "turbo run test:without-external",
    "test:ci": "turbo run test:ci",
    "test:quiet": "turbo run test:quiet",
    "test:ci:quiet": "turbo run test:ci:quiet",
    "test:playwright": "pnpm --filter @roast/web run test:playwright",
    "test:playwright:ui": "pnpm --filter @roast/web run test:playwright:ui",
    "test:playwright:headed": "pnpm --filter @roast/web run test:playwright:headed",
    "test:playwright:debug": "pnpm --filter @roast/web run test:playwright:debug",
    "db:push": "pnpm --filter @roast/db db:push",
    "db:migrate": "pnpm --filter @roast/db db:migrate",
    "db:migrate:reset": "pnpm --filter @roast/db run db:migrate:reset:safe",
    "db:deploy": "pnpm --filter @roast/db run db:migrate:deploy",
    "db:studio": "pnpm --filter @roast/db db:studio",
    "db:sync:agents": "pnpm --filter @roast/db run sync:agents",
    "db:setup": "pnpm run db:push && pnpm run db:sync:agents",
    "process-jobs": "pnpm --filter @roast/web run process-jobs",
    "process-jobs-adaptive": "pnpm --filter @roast/web run process-jobs-adaptive",
    "test:manual": "dotenv -e apps/web/.env.local -- node scripts/run-integration-tests.js",
    "cleanup-stale-jobs": "pnpm --filter @roast/web run cleanup-stale-jobs",
    "test-helicone-sessions": "pnpm --filter @roast/web run test-helicone-sessions",
    "helicone-cost-report": "pnpm --filter @roast/web run helicone-cost-report",
    "worktree:create": "./dev/scripts/worktree-manager.sh create",
    "worktree:start": "./dev/scripts/worktree-manager.sh start",
    "worktree:list": "./dev/scripts/worktree-manager.sh list",
    "worktree:ports": "./dev/scripts/worktree-manager.sh ports",
    "worktree": "./dev/scripts/worktree-manager.sh",
    "migrations:status": "node dev/scripts/show-migrations.js",
    "check": "pnpm run typecheck && pnpm run lint",
    "check:all": "turbo run lint typecheck test:ci --parallel",
    "check:deps": "pnpm -r exec pnpm outdated || true",
    "check:security": "pnpm audit",
    "check:health": "pnpm run check:all && pnpm run check:deps && pnpm run check:security",
    "precommit": "pnpm run check && pnpm run test:ci",
    "docker:test": "./dev/scripts/test-docker-builds.sh",
    "docker:test:compose": "docker-compose -f docker-compose.test.yml build",
    "docker:validate": "./dev/scripts/validate-monorepo.sh",
    "docker:check": "./dev/scripts/docker-check-all.sh",
    "docker:quick": "pnpm run docker:validate && pnpm run docker:test"
  },
  "devDependencies": {
    "@hono/node-server": "^1.17.1",
    "@types/glob": "^8.1.0",
    "@types/iarna__toml": "^2.0.5",
    "@types/jest": "^29.5.14",
    "@types/uuid": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "hono": "^4.8.10",
    "knip": "^5.62.0",
    "prisma": "^6.13.0",
    "raw-loader": "^4.0.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.1",
    "turbo": "^2.3.3",
    "uuid": "^11.1.0"
  },
  "packageManager": "pnpm@9.15.1"
}