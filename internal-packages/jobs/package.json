{
  "name": "@roast/jobs",
  "version": "0.1.0",
  "private": true,
  "description": "Job processing package for RoastMyPost",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run",
    "test:integration": "vitest run",
    "test:ci": "vitest run",
    "process-job": "tsx src/cli/process-job.ts",
    "process-adaptive": "tsx src/cli/process-adaptive.ts",
    "process-pgboss": "tsx src/cli/process-pgboss-worker.ts"
  },
  "dependencies": {
    "@roast/ai": "workspace:*",
    "@roast/db": "workspace:*",
    "@roast/domain": "workspace:*",
    "dotenv": "^17.2.0",
    "pg-boss": "^12.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}