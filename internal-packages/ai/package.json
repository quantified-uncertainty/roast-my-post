{
  "name": "@roast/ai",
  "version": "0.1.0",
  "description": "Core AI utilities for RoastMyPost - Claude integration, Helicone tracking, and token management",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./server": {
      "types": "./src/server.ts",
      "default": "./src/server.ts"
    },
    "./meta-eval": {
      "types": "./dist/meta-eval/index.d.ts",
      "default": "./dist/meta-eval/index.js"
    },
    "./tools/smart-text-searcher/core": {
      "types": "./dist/tools/smart-text-searcher/core.d.ts",
      "default": "./dist/tools/smart-text-searcher/core.js"
    },
    "./analysis-plugins/utils/textHelpers": {
      "types": "./dist/analysis-plugins/utils/textHelpers.d.ts",
      "default": "./dist/analysis-plugins/utils/textHelpers.js"
    },
    "./analysis-plugins/types": {
      "types": "./dist/analysis-plugins/types.d.ts",
      "default": "./dist/analysis-plugins/types.js"
    },
    "./analysis-plugins/types/plugin-types": {
      "types": "./dist/analysis-plugins/types/plugin-types.d.ts",
      "default": "./dist/analysis-plugins/types/plugin-types.js"
    },
    "./text-location/line-based": {
      "types": "./src/text-location/line-based/index.ts",
      "default": "./src/text-location/line-based/index.ts"
    },
    "./testing": {
      "types": "./src/testing.ts",
      "default": "./src/testing.ts"
    },
    "./tools/all-tools": {
      "types": "./src/tools/all-tools.ts",
      "default": "./src/tools/all-tools.ts"
    },
    "./tools/generated-readmes": {
      "types": "./src/tools/generated-readmes.ts",
      "default": "./src/tools/generated-readmes.ts"
    },
    "./fallacy-extraction": {
      "types": "./dist/analysis-plugins/plugins/fallacy-check/extraction/index.d.ts",
      "default": "./dist/analysis-plugins/plugins/fallacy-check/extraction/index.js"
    },
    "./fallacy-extraction/lab": {
      "types": "./dist/analysis-plugins/plugins/fallacy-check/extraction/lab-exports.d.ts",
      "default": "./dist/analysis-plugins/plugins/fallacy-check/extraction/lab-exports.js"
    },
    "./fallacy-judge": {
      "types": "./dist/tools/fallacy-judge/index.d.ts",
      "default": "./dist/tools/fallacy-judge/index.js"
    },
    "./fallacy-judge/types": {
      "types": "./dist/tools/fallacy-judge/types.d.ts",
      "default": "./dist/tools/fallacy-judge/types.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --config .eslintrc.json --ext .ts,.tsx",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:llm": "vitest run --config vitest.config.llm.ts",
    "test:unit": "vitest run",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "test:all": "pnpm run test:unit && pnpm run test:integration",
    "test:ci": "vitest run",
    "generate-schemas": "tsx scripts/generate-tool-schemas.ts",
    "generate-readmes": "tsx scripts/generate-tool-readmes.ts",
    "generate-plugin-readmes": "tsx scripts/generate-plugin-readmes.ts",
    "check-schemas": "tsx src/tools/check-generated-schemas.ts",
    "check-readmes": "pnpm --filter @roast/web test generated-readmes.vtest.ts",
    "prebuild": "pnpm run generate-schemas && pnpm run generate-readmes && pnpm run generate-plugin-readmes",
    "bulk-claims": "tsx scripts/run-claim-bulk.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.54.0",
    "@leeoniya/ufuzzy": "^1.0.18",
    "mathjs": "^14.0.1",
    "openai": "^4.77.0",
    "tiktoken": "^1.0.17",
    "uuid": "^11.1.0",
    "yaml": "^2.8.1",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/node": "^22.10.6",
    "@types/uuid": "^10.0.0",
    "eslint": "^8.57.1",
    "tsx": "^4.7.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@roast/db": "workspace:*"
  }
}