{
  "extends": "../../apps/web/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node"],
    "target": "ES2022",
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist", 
    "src/**/__tests__/**/*",
    "src/**/__mocks__/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.vtest.ts",
    "src/**/*.vtest.tsx",
    "src/**/mockHelpers.ts",
    "src/**/testUtils.ts",
    "src/test-setup.ts",
    "src/testing.ts",
    "src/claude/mockHelpers.ts",
    "src/claude/testUtils.ts"
  ],
  "references": [
    { "path": "../db" }
  ]
}