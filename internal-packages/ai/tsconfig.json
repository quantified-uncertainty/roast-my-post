{
  "extends": "../../apps/web/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist", 
    "src/**/__tests__/**/*",
    "src/**/__mocks__/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/mockHelpers.ts",
    "src/**/testUtils.ts",
    "src/test-setup.ts"
  ],
  "references": [
    { "path": "../db" }
  ]
}