# Production Database Configuration
# Copy this file to .env.prod and fill in your actual credentials
# DO NOT commit .env.prod - it contains sensitive information

# Required: Production database credentials
export PGPASSWORD="your-production-database-password"
export PROD_DB_USER="your-prod-username"
export PROD_DB_HOST="your-db-host.db.ondigitalocean.com"
export PROD_DB_NAME="roast_my_post"

# Optional: Production database port (default: 25061)
export PROD_DB_PORT="25061"

# Optional: Local database configuration
# These usually don't need to be changed
# export LOCAL_DB_USER="postgres"
# export LOCAL_DB_PASS="postgres"
# export LOCAL_DB_NAME="roast_my_post"
# export POSTGRES_VERSION="16"
