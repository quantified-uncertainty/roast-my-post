{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "DATABASE_URL",
    "ANTHROPIC_API_KEY",
    "OPENAI_API_KEY",
    "OPENROUTER_API_KEY",
    "NEXTAUTH_URL",
    "AUTH_SECRET",
    "AUTH_RESEND_KEY",
    "EMAIL_FROM",
    "HELICONE_API_KEY",
    "HELICONE_API_BASE_URL",
    "FIRECRAWL_KEY",
    "DIFFBOT_KEY",
    "NODE_ENV",
    "NEXT_PUBLIC_API_URL",
    "CI",
    "INTEGRATION_TESTS",
    "RUN_LLM_TESTS",
    "SHOW_TEST_LOGS"
  ],
  "globalDependencies": [
    ".env",
    ".env.local",
    ".env.production",
    "tsconfig.json"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "@roast/db#gen:build"],
      "outputs": ["dist/**", ".next/**", "build/**"],
      "inputs": ["$TURBO_DEFAULT$", "!**/*.test.ts", "!**/*.test.tsx", "!**/*.md"],
      "outputLogs": "new-only"
    },
    "dev": {
      "dependsOn": ["@roast/db#gen"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["@roast/db#gen"],
      "outputs": [],
      "inputs": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/eslint*"],
      "outputLogs": "errors-only"
    },
    "typecheck": {
      "dependsOn": ["^build", "@roast/db#gen"],
      "outputs": [],
      "inputs": ["**/*.ts", "**/*.tsx", "**/tsconfig*.json"],
      "outputLogs": "errors-only"
    },
    "test": {
      "dependsOn": ["@roast/db#gen"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "**/*.test.ts", "**/*.test.tsx", "**/jest.config.*"],
      "env": ["CI", "NODE_ENV"],
      "outputLogs": "new-only"
    },
    "test:unit": {
      "dependsOn": ["@roast/db#gen"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "**/*.test.ts", "**/*.test.tsx", "**/jest.config.*"],
      "env": ["CI", "NODE_ENV"],
      "outputLogs": "new-only"
    },
    "test:integration": {
      "dependsOn": ["@roast/db#gen", "@roast/domain#build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "**/*.integration.test.ts", "**/jest.config.*"],
      "env": ["CI", "NODE_ENV", "DATABASE_URL"],
      "cache": false,
      "outputLogs": "full"
    },
    "test:ci": {
      "dependsOn": ["@roast/db#gen"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "**/*.test.ts", "**/*.test.tsx", "**/jest.config.*"],
      "env": ["CI", "NODE_ENV"],
      "outputLogs": "new-only"
    },
    "test:ci-integration": {
      "dependsOn": ["@roast/db#gen", "@roast/domain#build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "**/*.integration.test.ts", "**/jest.config.*"],
      "env": ["CI", "NODE_ENV", "DATABASE_URL"],
      "cache": false,
      "outputLogs": "full"
    },
    "test:ci-nocov": {
      "dependsOn": ["@roast/db#gen"],
      "outputs": [],
      "inputs": ["src/**", "**/*.test.ts", "**/*.test.tsx", "**/jest.config.*"],
      "env": ["CI", "NODE_ENV"],
      "outputLogs": "new-only"
    },
    "test:shard": {
      "dependsOn": ["@roast/db#gen"],
      "outputs": [],
      "inputs": ["src/**", "**/*.test.ts", "**/*.test.tsx", "**/jest.config.*"],
      "env": ["CI", "NODE_ENV"],
      "cache": false,
      "outputLogs": "new-only"
    },
    "test:e2e": {
      "dependsOn": ["@roast/db#gen"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "**/*.e2e.test.ts", "**/jest.config.*"],
      "env": ["CI", "NODE_ENV", "FIRECRAWL_KEY"],
      "cache": false,
      "outputLogs": "full"
    },
    "test:llm": {
      "dependsOn": ["@roast/db#gen"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "**/*.llm.test.ts", "**/jest.config.*"],
      "env": ["CI", "NODE_ENV", "ANTHROPIC_API_KEY", "OPENAI_API_KEY"],
      "cache": false,
      "outputLogs": "full"
    },
    "test:fast": {
      "dependsOn": ["@roast/db#gen"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "**/*.test.ts", "**/*.test.tsx", "**/*.integration.test.ts", "**/jest.config.*"],
      "env": ["CI", "NODE_ENV", "DATABASE_URL"],
      "outputLogs": "new-only"
    },
    "test:without-llms": {
      "dependsOn": ["@roast/db#gen"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "**/*.test.ts", "**/*.test.tsx", "**/*.integration.test.ts", "**/*.e2e.test.ts", "**/jest.config.*"],
      "env": ["CI", "NODE_ENV", "DATABASE_URL", "FIRECRAWL_KEY"],
      "outputLogs": "new-only"
    },
    "test:without-external": {
      "dependsOn": ["@roast/db#gen"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "**/*.test.ts", "**/*.test.tsx", "**/*.integration.test.ts", "**/jest.config.*"],
      "env": ["CI", "NODE_ENV", "DATABASE_URL"],
      "outputLogs": "new-only"
    },
    "gen": {
      "cache": false,
      "outputs": ["generated/**"],
      "outputLogs": "errors-only"
    },
    "gen:build": {
      "cache": false,
      "outputs": ["generated/**"],
      "outputLogs": "errors-only"
    },
    "db:push": {
      "cache": false,
      "outputLogs": "full"
    },
    "db:migrate": {
      "cache": false,
      "outputLogs": "full"
    }
  }
}